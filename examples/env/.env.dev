APP_NAME="Cloud Storage"
VERSION=1.0.0
DEBUG=1
SECRET_KEY={"kty": "OKP", "crv": "Ed25519", "x": "<key>", "d": "<key>", "alg": "EdDSA"}
ALLOWED_ORIGINS="<origin>, <origin>"

MAIL_USERNAME=<user>
MAIL_PASSWORD=<password>
MAIL_HOSTNAME=<hostname>
MAIL_PORT=<port>
VERIFICATION_URL="http://<url>/api/v1/auth/verify-email?verification_token="

AUTH_SERVICE=auth:50051
FILES_SERVICE=files:50051
KAFKA_SERVICE=kafka:9092

ZOOKEEPER_CLIENT_PORT=2181
KAFKA_ZOOKEEPER_CONNECT=zookeeper:2181
KAFKA_ADVERTISED_LISTENERS=PLAINTEXT://kafka:9092
KAFKA_LISTENER_SECURITY_PROTOCOL_MAP=PLAINTEXT:PLAINTEXT
KAFKA_INTER_BROKER_LISTENER_NAME=PLAINTEXT
KAFKA_OFFSETS_TOPIC_REPLICATION_FACTOR=1

POSTGRES_DRIVER=postgresql+asyncpg
POSTGRES_DB=cloud_storage
POSTGRES_USER=postgres
POSTGRES_PASSWORD=<password>
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

REDIS_DB=0
REDIS_USER=default
REDIS_PASSWORD=<password>
REDIS_HOST=redis
REDIS_PORT=6379